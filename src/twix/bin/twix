#!/usr/bin/env python

# -*- coding: utf-8 -*-

"""
Twix {version}

Twix is a Tmux session manager in the same vein as Tmuxinator and friends.

Documentation:
    https://twix.readthedocs.org

Usage:
    twix start <name>
    twix new <name> [--extends=<existing>]
    twix copy <name> <new>
    twix wipe [<name>]
    twix show <name>
    twix list

Options:
    --extends=<existing>   Create a new session config which extends from another
    -h --help              Show this help text.
    --version              Show version.

Example:
    twix create foo
    twix foo
"""

from docopt import docopt
from twix import get_version


if __name__ == "__main__":
    arguments = docopt(__doc__.format(version=get_version()),
                       version='Twix {0}'.format(get_version()))
